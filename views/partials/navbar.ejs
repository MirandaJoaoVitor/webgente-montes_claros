<nav id="navbar" class="navbar navbar-expand-lg">
  <div class="container-fluid d-flex justify-content-between align-items-center">
    <!-- Espaço vazio para alinhamento -->
    <div class="flex-shrink-0 d-none d-lg-block" id="alignment-space"></div>

    <!-- Imagem centralizada -->
    <a href="https://www.cmd.mg.gov.br/" target="_blank" class="d-flex justify-content-center">
      <img src="img/pref-cmd.png" alt="logo prefeitura" class="img-fluid" style="max-height: 60px;" />
    </a>

    <!-- Imagem na direita -->
    <a href="https://www.genteufv.com.br/" target="_blank" class="navbar-brand d-flex align-items-center">
      <img id="right-image" src="img/webgente-cinza.png" alt="logo webgente" class="img-fluid" style="max-height: 30px;">
      <span class="ml-2 d-none d-md-inline" style="font-size: 2rem; color: #4D4D4D; font-weight: bold;">
        UFV
      </span>
    </a>
  </div>
</nav>

<style>
  @media (max-width: 768px) {
    #navbar img {
      max-height: 40px; /* Ajusta o tamanho das imagens em telas menores */
    }
  }
</style>

<script>
  // Ajustar dinamicamente o espaço vazio com base na largura da imagem à direita
  function adjustAlignmentSpace() {
    const rightImage = document.getElementById('right-image');
    const alignmentSpace = document.getElementById('alignment-space');

    if (rightImage && alignmentSpace) {
      alignmentSpace.style.width = `${rightImage.offsetWidth}px`;
    }
  }

  window.addEventListener('load', adjustAlignmentSpace);
  window.addEventListener('resize', adjustAlignmentSpace);
</script>
